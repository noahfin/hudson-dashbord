<div class="container">
<div class="user-creds-wrapper">
  <h1 class="register-head">Sign Up! </h1>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control rounded-0' %>
    </div>

    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control rounded-0' %>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "off", class: 'form-control rounded-0' %>
      <% if @validatable %>
        <span class="help-block"><%= @minimum_password_length %> characters minimum</span>
      <% end %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control rounded-0' %>
    </div>

    <%= f.submit "Sign up", class: 'btn btn-lg btn-outline-success rounded-0' %>
  <% end %>
 <br>
  <%= render "devise/shared/links" %>
</div>
</div>
